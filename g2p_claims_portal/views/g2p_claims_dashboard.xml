<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="dashboard"
        name="G2P Claims Portal Dashboard"
        inherit_id="g2p_self_service_portal.dashboard"
        primary="True"
        priority="930"
    >
        <xpath expr="t[@t-call='g2p_self_service_portal.base']" position="attributes">
            <attribute name="t-call">g2p_claims_portal.base</attribute>
        </xpath>
        <xpath expr="//div[hasclass('table-container')]" position="replace">
        </xpath>
        <xpath
            expr="//h5[hasclass('card-heading') and contains(text(), 'All Programs')]/.."
            position="replace"
        >
            <div class="card">
                <h5 class="card-heading">Claims</h5>
                <hr />
                <ul class="card-block">
                    <a href="/claims/entitlements">
                        <li>
                            <div class="icon-image">
                                <img src="/g2p_self_service_portal/static/src/img/medical.png" />
                            </div>
                            <div>
                                <a href="/claims/entitlements">
                                    New Claim
                                </a>
                                <p>Submit new claim</p>
                            </div>
                        </li>
                    </a>
                    <a href="/claims/history">
                        <li>
                            <div class="icon-image">
                                <img
                                    src="/g2p_self_service_portal/static/src/img/school_FILL0_wght400_GRAD0_opsz48.png"
                                />
                            </div>
                            <div>
                                <a href="/claims/history">
                                    Past Claims
                                </a>
                                <p>View past claims</p>
                            </div>
                        </li>
                    </a>
                </ul>
                <div class="card-foot">
                    <a href="/claims/entitlements" class="justify-content-center viewprograms">
                        View All
                    </a>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
