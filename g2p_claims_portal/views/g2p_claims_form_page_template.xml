<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="claim_submission_form_template" name="G2P Claims Portal New Claim Submission">
        <t t-call="g2p_claims_portal.base">
            <t t-set="title">New Claim Submission | Claims Portal</t>
            <script type="text/javascript" src="/g2p_claims_portal/static/src/js/claims_form_action.js" />
            <div class="main-container">
                <div class="container-adjuster">
                    <div class="form-template">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="details">Application Form</div>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb form-layout-breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="/claims/home">
                                                Home
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item" aria-current="page">
                                            <a href="/claims/entitlements">
                                                New Claims
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">
                                            Submission
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="card container-left" style="width: auto; padding: 0px;">
                                    <div class="card-header form-card-header" style="padding: 0px;">
                                        <h5 class="mb-0 form-heading">
                                            Submission Form
                                        </h5>
                                        <p class="form-description">
                                            Entitlement ID - <t t-esc="entitlement_id" />
                                        </p>
                                    </div>
                                    <div class="card-body" style="padding: 0px;">
                                        <div class="note">
                                            <div class="container">
                                                <p class="mandatory-fields-note">
                                                    Fields marked with
                                                    "<span class="s_website_form_mark">*</span>"
                                                    are mandatory
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <t t-out="0" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card container-right" style="width: auto; padding: 0px;">
                                    <div class="card-header" style="padding: 0px;">
                                        <h5 class="action-heading">
                                            Entitlement ID - <t t-esc="entitlement_id" />
                                        </h5>
                                        <p class="action-description">
                                            The claim submission will be made against the above
                                            entitlement id.
                                        </p>
                                    </div>

                                    <div class="card-body" style="padding: 20px;">
                                        <button
                                            id="program_submit_id"
                                            onclick="form_submit_action()"
                                            t-att-program="entitlement_id"
                                            type="submit"
                                            class="btn btn-primary btn-lg btn-block form_submit_action"
                                        >
                                            Submit
                                        </button>
                                        <button
                                            type="button"
                                            class="btn btn-outline-primary btn-lg btn-block form_cancel_action"
                                            data-toggle="modal"
                                            data-target="#exampleModalCenter"
                                        >
                                            Cancel
                                        </button>

                                        <!-- Modal -->
                                        <div
                                            class="modal fade"
                                            id="exampleModalCenter"
                                            tabindex="-1"
                                            role="dialog"
                                            aria-labelledby="exampleModalCenterTitle"
                                            aria-hidden="true"
                                        >
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5
                                                            class="modal-title"
                                                            id="exampleModalLongTitle"
                                                        >Discard applicaton?</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>
                                                            The entered data will not be saved.
                                                            Are you sure you want to discard the form?
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button
                                                            type="button"
                                                            class="btn btn-primary modal-discard-button"
                                                            onclick="location.href = '/claims/entitlements';"
                                                        >
                                                            Discard
                                                        </button>
                                                        <button
                                                            type="button"
                                                            class="btn btn-outline-primary modal-cancel-button"
                                                            data-dismiss="modal"
                                                        >
                                                            Cancel
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
