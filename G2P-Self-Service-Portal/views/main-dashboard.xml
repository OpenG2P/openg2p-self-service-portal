<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="main_page" name="main dashboard">
        <t name="main dashboard" t-name="G2P-Self-Service-Portal.main_page">
            <t name="Homepage" t-name="website.homepage1">
                <t t-call="website.layout">
                    <t t-set="pageName" t-value="homepage" />
     
                    <div class="main-container">
                        <div class="table-container">
                            <div class="table-head-container">
                                <p class='table-title'>My Programs</p>
                                <form class="form-inline my-2 my-lg-0">
                                    <div class="search-box">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                            height="16"
                                            fill="currentColor" class="bi bi-search search-icon"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                        </svg>

                                        <input placeholder="Search by program name"
                                            class="search-text" aria-controls="myprogramstable" />

                                    </div>
                                </form>
                            </div>
                            <div class="tables-values-container">
                                <table id='myprogramstable'
                                    class='table table-stripped sortable table-sm'>
                                    <thead class="thead">
                                        <tr>
                                            <th>Sl.No</th>
                                            <th aria-sort="ascending">Program Name
                                                 </th>
                                            <th>Application ID</th>
                                            <th>Status</th>
                                            <th>Submission Date</th>
                                            <th>Entitlement(USD)</th>
                                            <th>Amount Received(USD)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="programs" t-as="program">
                                            <t
                                            t-if="program['has_applied']">
                                            <tr>
                                                <td class='table-data'>
                                                    <t t-esc="program['id']" />
                                                </td>
                                                <td class='program-name'>
                                                    <a href="/program/">
                                                        <t t-esc="program['name']" />
                                                    </a>
                                                </td>
                                                <td class='table-data'>
                                                    <span>Applied</span>
                                                </td>
                                                <td class='table-data'>
                                                    <a href="#">
                                                        <t t-esc="program['status']" />
                                                    </a>
                                                </td>
                                                <td class='table-data'>
                                                    <t t-esc="program['enrollment_date']"/>
                                                </td>
                                                <td class='table-data'>
                                                    <t t-esc="program['issued']"/>
                                                </td>
                                                <td class='table-data'>
                                                    <span>Amount Received</span>
                                                </td>
                                            </tr>

                                        </t>
                                        </t>


                                    </tbody>
                                    <div>

                                    </div>
                                </table>
                            </div>
                        </div>

                        <div class="card-container">
                            <div class="card">
                                <h5 class="card-heading">All Programs</h5>
                                <hr />
                                <ul class="card-block">
                                    <li>
                                        <img
                                            src="G2P-Self-Service-Portal/static/src/img/medical.png"
                                            class="icon-image" />
                                        <div>
                                            <a href="#">
                                                Healthcare </a>
                                            <p>30+ Schemes
                                                available</p>
                                        </div>

                                    </li>
                                    <li>
                                        <img
                                            src="G2P-Self-Service-Portal/static/src/img/person_filled_FILL0_wght400_GRAD0_opsz48.svg"
                                            class="icon-image" />
                                        <div>
                                            <a href="#">
                                                Education </a>
                                            <p>55+ Schemes available</p>
                                        </div>

                                    </li>


                                </ul>
                                <div class='viewprograms'>
                                    <a href="/allprograms"
                                        class='justify-content-center'>View more</a>
                                </div>

                            </div>
                            <div class='card'>
                                <h5 class="card-heading">Other Services</h5>
                                <hr />
                                <ul class="card-block">
                                    <li>
                                        <img
                                            src="/home/ramakrishna/Desktop/openg2p/openg2p-self-service-portal/G2P-Self-Service-Portal/static/src/img/medical_services_FILL0_wght400_GRAD0_opsz48.png"
                                            class="icon-image" />
                                        <div>
                                            <a href="#">
                                                KYC </a>
                                            <p>Tap to know more</p>
                                        </div>

                                    </li>
                                    <li>

                                        <img
                                            src="G2P-Self-Service-Portal/static/src/img/person_filled_FILL0_wght400_GRAD0_opsz48.svg"
                                        />
                                        <div>
                                            <a href="#">
                                                Housing </a>
                                            <p>Tap to know more</p>
                                        </div>

                                    </li>


                                </ul>
                                <div class='viewprograms'>
                                    <a href="/otherservices"
                                        class='justify-content-center'>View more</a>
                                </div>

                            </div>
                            <div class="card">
                                <div class="s_chart" data-type="doughnut" data-legend-position="bottom" data-tooltip-display="true" data-stacked="false" data-border-width="2" data-data="{&quot;labels&quot;:[&quot;Pending&quot;,&quot;Received&quot;],&quot;datasets&quot;:[{&quot;label&quot;:&quot;One&quot;,&quot;data&quot;:[&quot;12&quot;,&quot;24&quot;],&quot;backgroundColor&quot;:[&quot;#00FFFF&quot;,&quot;#0000FF&quot;],&quot;borderColor&quot;:[&quot;o-color-4&quot;,&quot;&quot;]}]}" data-snippet="s_chart" data-name="Chart">
                                  <h2 class="o_default_snippet_text">
                                    <br/>
                                  </h2>
                                  <canvas style="" width="400"/>
                                </div>
                              </div>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>
</odoo>