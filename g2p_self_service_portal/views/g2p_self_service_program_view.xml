<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="self_service_portal_form" model="ir.ui.view">
        <field name="name">self.service.portal.form</field>
        <field name="model">g2p.program</field>
        <field name="inherit_id" ref="g2p_programs.view_program_list_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Map Portal Form">

                        <group>
                
                            <field name="self_service_portal_form" />

                        </group>

                        <footer>
                        
                            <button name="update_template" type="object" string="Save" class="btn btn-primary" states="active"/>
                            <button name="discard_template" type="object" string="Cancel" class="btn btn-primary" states="active"/>   

                        </footer>  
                        
                        

                </page>
            </xpath>
        </field>
    </record>    

