<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- TODO: Remove all hardcoding -->
    <template id="signup_page" name="G2P Self Service Sign up">

        <t t-call="g2p_self_service_portal.base">
            <t t-set="no_header" t-value="1" />
            <t t-set="no_footer" t-value="1" />
            <t t-set="body_classname" t-value="'bg-100'" />
            <link rel="stylesheet" href="/g2p_self_service_portal/static/src/css/self_service_portal.css" />
            <div class="ssp-login-body">
                <div class="ssp-login-box">
                    <div class="logo-box">
                        <img src="/g2p_self_service_portal/static/src/img/logo@2x.png" class="logo" />
                    </div>
                    <form
                        class="oe_login_form"
                        role="form"
                        t-attf-action="/web/otp/authentication"
                        method="post"
                        onsubmit="this.action = '/web/otp/authentication' + location.hash"
                    >
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <input type="hidden" name="redirect" value="/selfservice/home" />
                        <div class="form-group field-login">
                            <label for="login">Email</label>
                            <input
                                type="text"
                                placeholder="Enter email address"
                                name="login"
                                t-att-value="login"
                                id="login"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autofocus="autofocus"
                                autocapitalize="off"
                            />
                        </div>

                        <div class="form-group field-login">
                            <label for="phone">Phone</label>
                            <input
                                type="tel"
                                placeholder=""
                                name="phone"
                                t-att-value="phone"
                                id="phone"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autofocus="'autofocus' if login else None"
                            />
                        </div>

                        <div class="form-group">
                            <label for="name">Name</label>
                            <input
                                type="text"
                                placeholder="Enter your name"
                                name="name"
                                t-att-value="name"
                                id="name"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autofocus="'autofocus' if phone else None"
                            />
                        </div>

                        <div class="form-group field-password">
                            <label for="password">Password</label>
                            <input
                                type="password"
                                placeholder="Enter password"
                                name="password"
                                id="password"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autocomplete="current-password"
                                t-att-autofocus="'autofocus' if name else None"
                                maxlength="4096"
                            />
                        </div>
                        <div class="form-group field-password">
                            <label for="confirm_password">Confirm Password</label>
                            <input
                                type="password"
                                placeholder="Re Enter password"
                                name="confirm_password"
                                id="confirm_password"
                                t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                required="required"
                                autocomplete="current-password"
                                t-att-autofocus="'autofocus' if password else None"
                                maxlength="4096"
                            />
                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error" />
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message" />
                        </p>

                        <div
                            t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}"
                        >
                            <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                            <div class="o_login_auth" />
                        </div>

                        <input type="hidden" name="redirect" t-att-value="redirect" />
                    </form>
                </div>
                <div class="login-bottom-text"> Facing any challenges? <a href="#">Help</a> </div>
            </div>
        </t>
    </template>
</odoo>
