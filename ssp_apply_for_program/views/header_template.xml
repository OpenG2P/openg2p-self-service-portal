<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <template id="custom_header" inherit_id="website.layout" name="Custom Header">
       <xpath expr="//header" position="replace">
           <header>
               <div class='container-fluid'>
                   <div class='row'>
                       <div class='col-4 col-lg-12 header-div'>
                           <nav class="navbar navbar-expand-lg navbar-light">
                               <a class="navbar-brand ml-5 " href="/">
                                   <img class="d-none d-md-block"
                                       src="/ssp_apply_for_program/static/src/img/logo.png"
                                       alt="Large Logo" style="width:250px;" />
                                   <img class="d-block d-md-none"
                                       src="ssp_apply_for_program/static/src/img/logo.png"
                                       alt="Small Logo"
                                       style="width:250px;" />
                               </a>
                               <button class="navbar-toggler" type="button" data-toggle="collapse"
                                   data-target="#navbarSupportedContent"
                                   aria-controls="navbarSupportedContent"
                                   aria-expanded="false" aria-label="Toggle navigation">
                                   <span class="navbar-toggler-icon"></span>
                               </button>

                               <div
                                   class="collapse navbar-collapse d-flex justify-content-end mr-5"
                                   id="navbarSupportedContent">
                                   <form class="form-inline my-2 my-lg-0 mr-3">
                                       <div class='input-group border border-secondary rounded'>
                                           <span class='input-group-append'>
                                               <button class="btn my-2 my-sm-0 border-0"
                                                   type="submit">
                                                   <i class="fa fa-search"></i>
                                               </button>
                                           </span>
                                           <input class="form-control mr-sm-2 border-0"
                                               type="search"
                                               placeholder="Search here" aria-label="Search" />
                                       </div>
                                   </form>
                                   <div class="js_language_selector dropdown show">
                                       <button type="button" data-toggle="dropdown"
                                           class="btn btn-sm btn-outline-secondary bg-light text-secondary dropdown-toggle pt-2 pb-2 ">
                                           <img class="o_lang_flag" data-oe-model="ir.ui.view"
                                               data-oe-id="1359" data-oe-field="arch"
                                               data-oe-xpath="/t[1]/img[1]"
                                               src="/base/static/img/country_flags/us.png?height=25"
                                               loading="lazy" style="" />
                                           <span class="align-middle">English (US)</span>
                                       </button>
                                       <div role="menu" class="dropdown-menu hide"
                                           x-placement="top-start"
                                           style="position: absolute; transform: translate3d(0px,35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                           <a href="/en/"
                                               class="dropdown-item js_change_lang active"
                                               data-url_code="en">
                                               <span>English (US)</span>
                                           </a>
                                           <a data-oe-model="ir.ui.view" data-oe-id="1360"
                                               data-oe-field="arch" data-oe-xpath="/t[1]/a[1]"
                                               class="o_add_language d-none d-sm-block dropdown-item"
                                               href="/web#action=base.action_view_base_language_install&amp;website_id=1&amp;url_return=%2F%5Blang%5D%2F%3F">
                                               <i class="fa fa-plus-circle"></i>
                                               <span>Add a language...</span>
                                           </a>
                                       </div>
                                   </div>
                                   <div class="o_user_menu dropdown">
                                       <a class="nav-link py-0 text-white d-inline-block" href="#"
                                           data-toggle="dropdown">
                                           <span
                                               class="d-inline-block rounded-circle border border-secondary text-secondary py-2 px-2">
                                               <t t-esc="request.env.user.name[0:3]" />
                                           </span>
                                       </a>
                                       <div class="dropdown-menu ">
                                           <!-- Existing user menu content here -->
                                           <a href='/user'>user Profile</a>
                                           <br />
                                           <a href="/web/session/logout?redirect=/web">Logout</a>
                                       </div>
                                   </div>
                               </div>
                           </nav>
                       </div>
                   </div>
               </div>
           </header>
       </xpath>
   </template>
</odoo>