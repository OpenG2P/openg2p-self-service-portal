<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <template id="custom_footer" inherit_id="website.layout" name="Custom Footer">
       <xpath expr="//footer" position="replace">
           <footer>
               <div class='container-fluid'>
                   <div class='row'>
                       <div class='col-3 col-lg-12 footer-div'>
                           <nav class="navbar navbar-expand-lg navbar-light">
                               <a class="navbar-brand ml-5 " href="/">
                                   <img class="d-none d-md-block"
                                       src="/ssp_apply_for_program/static/src/img/logo.png"
                                       alt="Large Logo" style="width:250px;" />
                                   <img class="d-block d-md-none"
                                       src="ssp_apply_for_program/static/src/img/logo.png"
                                       alt="Small Logo"
                                       style="width:250px;" />
                               </a>
                               <button class="navbar-toggler" type="button" data-toggle="collapse"
                                   data-target="#navbarSupportedContent"
                                   aria-controls="navbarSupportedContent"
                                   aria-expanded="false" aria-label="Toggle navigation">
                                   <span class="navbar-toggler-icon"></span>
                               </button>
                               <div
                                   class="collapse navbar-collapse d-flex justify-content-end mr-5"
                                   id="navbarSupportedContent">
                                   <ul class="navbar-nav">
                                       <li class="nav-item mr-3 active">
                                           <a class="nav-link " href="/home">Home <span class="sr-only">
                                               (current)</span></a>
                                       </li>
                                       <li class="nav-item mr-3">
                                           <a class="nav-link" href="/aboutus">About Us</a>
                                       </li>
                                       <li class="nav-item mr-3">
                                           <a class="nav-link " href="contactus">Contact Us</a>
                                       </li>
                                       <li class="nav-item mr-3">
                                           <a class="nav-link" href="other">Other</a>
                                       </li>
                                   </ul>
                               </div>
                           </nav>
                       </div>
                   </div>
               </div>
           </footer>
       </xpath>
   </template>
</odoo>


