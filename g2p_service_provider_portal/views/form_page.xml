<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="reimbursement_submission_form" name="G2P Service Provider Portal New Reimbursement Request">
        <t t-call="g2p_service_provider_portal.base">
            <t t-set="title">New Reimbursement Request | Service Provider Portal</t>
            <div class="main-container">
                <div class="container-adjuster">
                    <div class="form-template">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="details"><t t-esc="first_name" />, <t t-esc="last_name" /></div>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb form-layout-breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="/serviceprovider/home">
                                                Reimbursements
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">
                                            Submission
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="card container-left" style="width: auto; padding: 0px;">
                                    <div class="card-header form-card-header" style="padding: 0px;">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h5 class="mb-0 form-heading">
                                                Submission Form
                                                </h5>
                                                <p class="form-description">
                                                    Voucher ID - <t t-esc="entitlement_id" />
                                                </p>
                                            </div>
                                            <div class="col-md-4">
                                                    <button
                                                    data-toggle="modal"
                                                    data-target="#BeneficiaryDetailModal"
                                                    type="button"
                                                    class="beneficiary-detail-btn"
                                                >
                                                        <div class="row">
                                                            <div
                                                            class="col-sm-3"
                                                            style="display: flex; align-items: center;"
                                                        >
                                                                <i
                                                                class="fa fa-user"
                                                                style="color: #d76c12;"
                                                            />
                                                            </div>
                                                            <div class="col-sm-9" style="padding-left:0px">
                                                                <h5 class="beneficiary-btn-heading">
                                                                    Beneficiary Details
                                                                </h5>
                                                                <p class="beneficiary-btn-para">
                                                                    Tap to know more
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </button>
                                            </div>
                                            <!-- Beneficiary Detail Modal -->
                                            <div
                                                class="modal fade"
                                                id="BeneficiaryDetailModal"
                                                tabindex="-1"
                                                role="dialog"
                                                aria-labelledby="BeneficiaryDetailTitle"
                                                aria-hidden="true"
                                            >
                                                <div
                                                    class="modal-dialog modal-dialog-centered"
                                                    role="document"
                                                >
                                                    <div class="modal-content beneficiary-modal-content">
                                                        <div class="modal-header">
                                                            <h5
                                                                class="modal-title"
                                                                id="exampleModalLongTitle"
                                                            >Beneficiary Details</h5>
                                                        </div>
                                                        <div class="modal-body" style="overflow:hidden">
                                                            <div class="s_website_form_rows">
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="first_name"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >First Name</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <input
                                                                                class="s_website_form_input"
                                                                                type="text"
                                                                                id="first_name"
                                                                                name="first_name"
                                                                                t-att-value="first_name"
                                                                                disabled="1"
                                                                            />
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="last_name"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >Last Name</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <input
                                                                                class="s_website_form_input"
                                                                                type="text"
                                                                                id="last_name"
                                                                                name="last_name"
                                                                                t-att-value="last_name"
                                                                                disabled="1"
                                                                            />
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="email"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >Email Address</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <input
                                                                                class="s_website_form_input"
                                                                                type="email"
                                                                                id="email"
                                                                                name="email"
                                                                                t-att-value="email"
                                                                                disabled="1"
                                                                            />
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="mobile_number"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >Mobile Number</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <input
                                                                                class="s_website_form_input"
                                                                                type="tel"
                                                                                id="mobile_number"
                                                                                name="mobile_number"
                                                                                t-att-value="mobile_number"
                                                                                disabled="1"
                                                                            />
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="gender"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >Gender</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <div
                                                                                class="row s_website_form_multiple"
                                                                            >
                                                                                <div
                                                                                    class="radio col-12 col-lg-4 col-md-6"
                                                                                >
                                                                                    <div class="form-check">
                                                                                        <input
                                                                                            type="radio"
                                                                                            class="s_website_form_input form-check-input"
                                                                                            id="male"
                                                                                            name="Gender"
                                                                                            t-att-value="gender"
                                                                                            disabled="1"
                                                                                        />
                                                                                        <label
                                                                                            class="form-check-label s_website_form_check_label"
                                                                                            for="male"
                                                                                        >
                                                                                            Male
                                                                                        </label>
                                                                                    </div>
                                                                                </div>
                                                                                <div
                                                                                    class="radio col-12 col-lg-4 col-md-6"
                                                                                >
                                                                                    <div class="form-check">
                                                                                        <input
                                                                                            type="radio"
                                                                                            class="s_website_form_input form-check-input"
                                                                                            id="female"
                                                                                            name="Gender"
                                                                                            t-att-value="gender"
                                                                                            disabled="1"
                                                                                        />
                                                                                        <label
                                                                                            class="form-check-label s_website_form_check_label"
                                                                                            for="female"
                                                                                        >
                                                                                            Female
                                                                                        </label>
                                                                                    </div>
                                                                                </div>
                                                                                <div
                                                                                    class="radio col-12 col-lg-4 col-md-6"
                                                                                >
                                                                                    <div class="form-check">
                                                                                        <input
                                                                                            type="radio"
                                                                                            class="s_website_form_input form-check-input"
                                                                                            id="others"
                                                                                            name="Gender"
                                                                                            t-att-value="gender"
                                                                                            disabled="1"
                                                                                        />
                                                                                        <label
                                                                                            class="form-check-label s_website_form_check_label"
                                                                                            for="others"
                                                                                        >
                                                                                            Others
                                                                                        </label>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="s_website_form_field">
                                                                            <label
                                                                                class="s_website_form_label"
                                                                                for="dob"
                                                                            >
                                                                                <span
                                                                                    class="s_website_form_label_content"
                                                                                >Date of Birth</span>
                                                                                <span
                                                                                    class="s_website_form_mark"
                                                                                >*</span>
                                                                            </label>
                                                                            <input
                                                                                class="s_website_form_input"
                                                                                type="date"
                                                                                id="dob"
                                                                                name="dob"
                                                                                t-att-value="birthdate"
                                                                                disabled="1"
                                                                            />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button
                                                                type="button"
                                                                class="btn btn-outline-primary modal-cancel-button"
                                                                data-dismiss="modal"
                                                            >
                                                                Cancel
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body" style="padding: 0px;">
                                        <div class="note">
                                            <div class="container">
                                                <p class="mandatory-fields-note">
                                                    Fields marked with
                                                    "<span class="s_website_form_mark">*</span>"
                                                    are mandatory
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- <t t-out="0" /> -->
                                    <form id="reimbursement-form" method="post" enctype="multipart/form-data">
                                        <div class="s_website_form_rows">
                                            <div class="row">
                                                <div class="col-lg-7">
                                                    <div class="s_website_form_field">
                                                        <label
                                                            class="s_website_form_label"
                                                            for="voucher_code"
                                                        >
                                                            <span
                                                                class="s_website_form_label_content"
                                                            >Voucher Code</span>
                                                            <span class="s_website_form_mark">*</span>
                                                        </label>
                                                        <br />
                                                        <input
                                                            class="s_website_form_input"
                                                            type="text"
                                                            id="voucher_code"
                                                            name="voucher_code"
                                                            autofocus="autofocus"
                                                            placeholder="Enter Voucher Code"
                                                        />
                                                    </div>
                                                </div>
                                                <div class="col-lg-5">
                                                    <div class="s_website_form_field">
                                                        <label
                                                            class="s_website_form_label"
                                                            for="actual_amount"
                                                        >
                                                            <span
                                                                class="s_website_form_label_content"
                                                            >Actual Amount</span>
                                                            <span class="s_website_form_mark">*</span>
                                                        </label>
                                                        <input
                                                            class="s_website_form_input"
                                                            type="number"
                                                            id="actual_amount"
                                                            name="actual_amount"
                                                            placeholder="Enter Amount"
                                                            t-att-autofocus="'autofocus' if voucher_code else None"
                                                        />
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="s_website_form_field">
                                                <label
                                                    class="s_website_form_label"
                                                    for="reason_of_assistance"
                                                >
                                                    <span
                                                        class="s_website_form_label_content"
                                                    >Reason for assistance</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <br />
                                                <textarea
                                                    class="s_website_form_input"
                                                    id="reason_of_assistance"
                                                    name="reason_of_assistance"
                                                    style="min-height:78px"
                                                />
                                                <br />
                                            </div>
                                            <div class="s_website_form_field">
                                                <label
                                                    class="s_website_form_label"
                                                    for="statement_of_account"
                                                >
                                                    <span
                                                        class="s_website_form_label_content"
                                                    >Statement of Account</span>
                                                    <span class="s_website_form_mark">*</span>
                                                </label>
                                                <br />
                                                <input
                                                    class="s_website_form_input"
                                                    type="file"
                                                    id="statement_of_account"
                                                    name="statement_of_account"
                                                    multiple="1"
                                                />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card container-right" style="width: auto; padding: 0px;">
                                    <div class="card-header" style="padding: 0px;">
                                        <h5 class="action-heading">
                                            Voucher ID - <t t-esc="entitlement_id" />
                                        </h5>
                                        <p class="action-description">
                                            The claim submission will be made against the above voucher ID.
                                        </p>
                                    </div>

                                    <div class="card-body" style="padding: 20px;">
                                        <button
                                            data-toggle="modal"
                                            data-target="#SubmitModal"
                                            type="button"
                                            class="btn btn-primary btn-lg btn-block form_submit_action"
                                        >
                                            Submit
                                        </button>
                                        <button
                                            type="button"
                                            class="btn btn-outline-primary btn-lg btn-block form_cancel_action"
                                            onclick="location.href = '/serviceprovider/home';"
                                        >
                                            Cancel
                                        </button>

                                        <!-- Submit Modal -->
                                        <div
                                            class="modal fade"
                                            id="SubmitModal"
                                            tabindex="-1"
                                            role="dialog"
                                            aria-labelledby="SubmitModalTitle"
                                            aria-hidden="true"
                                        >
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5
                                                            class="modal-title"
                                                            id="exampleModalLongTitle"
                                                        >Do you want to submit the application?</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>
                                                            Once submitted, application can not be modified.
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button
                                                            type="button"
                                                            class="btn btn-outline-primary modal-cancel-button"
                                                            data-dismiss="modal"
                                                        >
                                                            Cancel
                                                        </button>
                                                        <button
                                                            id="program_submit_id"
                                                            onclick="reimbursement_form_submit_action()"
                                                            t-att-program="entitlement_id"
                                                            type="submit"
                                                            class="btn btn-primary modal-discard-button"
                                                        >
                                                            Submit
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
