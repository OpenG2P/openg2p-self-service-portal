<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="service_provider_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.g2p.service.provider</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="priority" eval="2000" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div
                    class="app_settings_block"
                    data-string="G2P Service Provider Settings"
                    id="g2p_service_provider_config_settings"
                    string="G2P Service Provider Settings"
                    data-key="g2p_service_provider_portal"
                >
                    <h2>G2P Service Provider Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted content-group mt16">
                                    <label
                                        for="service_provider_file_upload_size"
                                        string="Service Provider File Upload Size(MB)"
                                    />
                                    <field
                                        name="service_provider_file_upload_size"
                                        class="text-center oe_inline"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
